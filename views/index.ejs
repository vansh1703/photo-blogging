<% include ./partials/header.ejs %>
<div
  class="w-full h-screen bg-center bg-cover bg-[url('https://images.unsplash.com/photo-1516617442634-75371039cb3a?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NHx8YmFja2dyb3VuZCUyMGltYWdlfGVufDB8fDB8fHww')] flex items-center justify-center"
>
  <div class="w-[35vw] bg-white px-20 py-10 rounded-[30px]">
    <h1
      class="text-3xl text-center font-semibold text-zinc-700 leading-none captilize tracking-tighter"
    >
      Welcome to Pinterest
    </h1>
    <form action="/login" method="post">
      <input
        class="block border-2 rounded-md mt-2 w-full px-3 py-2"
        type="text"
        name="username"
        placeholder="Username"
      />
      <input
        class="block border-2 rounded-md mt-2 w-full px-3 py-2"
        type="password"
        name="password"
        placeholder="Password"
      />
      <a class="mt-2 inline-block font-semibold text-zinc-700" href="#"
        >Forgot password ?</a
      >
      <input
        class="block border-2 rounded-full mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full"
        type="submit"
        value="Login"
      />
      <p
        class="text-xs font-semibold text-zinc-700 mt-7 text-center w-3/4 mx-auto"
      >
        By continuing, you agree to Pinterest's Terms of Service; Opens a new
        tab and acknowledge that you've read our Privacy Policy; Opens a new
        tab. Notice at collection.
      </p>
    </form>
    <a
      class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full"
      href="/register"
      >Don't have an account ?</a
    >
  </div>
</div>
<% include ./partials/footer.ejs %>