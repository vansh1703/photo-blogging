<% include ./partials/header.ejs %>
<div
  class="w-full h-screen bg-center bg-cover bg-[url('https://images.unsplash.com/photo-1508717272800-9fff97da7e8f?q=80&w=2071&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] flex items-center justify-center"
>
  <div class="w-[35vw] bg-white px-20 py-10 rounded-[30px]">
    <h1
      class="mb-10 text-3xl text-center font-semibold text-zinc-700 leading-none captilize tracking-tighter"
    >
      Create New Account
    </h1>
    <form action="/register" method="post">
      <input
        class="block border-2 rounded-md mt-2 w-full px-3 py-2"
        type="text"
        name="username"
        placeholder="Username"
      />
      <input
        class="block border-2 rounded-md mt-2 w-full px-3 py-2"
        type="text"
        name="fullname"
        placeholder="Full name"
      />
      <input
        class="block border-2 rounded-md mt-2 w-full px-3 py-2"
        type="email"
        name="email"
        placeholder="Email"
      />
      <input
        class="block border-2 rounded-md mt-2 w-full px-3 py-2"
        type="number"
        name="contact"
        placeholder="Contact No."
      />
      <input
        class="block border-2 rounded-md mt-2 w-full px-3 py-2"
        type="password"
        name="password"
        placeholder="Password"
      />
      <input
        class="block border-2 rounded-full mt-5 w-full px-3 py-2 bg-red-600 text-white rounded-full"
        type="submit"
        value="Create New Account"
      />
      <p
        class="text-xs font-semibold text-zinc-700 mt-7 text-center w-3/4 mx-auto"
      >
        By continuing, you agree to Pinterest's Terms of Service; Opens a new
        tab and acknowledge that you've read our Privacy Policy; Opens a new
        tab. Notice at collection.
      </p>
    </form>
    <a
      class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full"
      href="/"
      >Login Existing Account ?</a
    >
  </div>
</div>
<% include ./partials/footer.ejs %>